#include <iostream>
#include <thread>
#include<condition_variable>
#include<mutex>

using namespace std;
int i = 0;
mutex mt;
condition_variable cv;

void odd()
{
  while(i<10)
  {
  unique_lock<mutex> lock(mt);;
  cv.wait(lock,[](){return i%2!=0;});
  cout<<i<<endl;
  i++;
  lock.unlock();
  cv.notify_all();
  }
}

void even()
{
  while(i<10)
  {
  unique_lock<mutex> lock(mt);;
  cv.wait(lock,[](){return i%2==0;});
  cout<<i<<endl;
  i++;
  lock.unlock();
  cv.notify_all();
    
  }
}
int main() 
{
  
   thread t1odd(odd);
   thread t2even(even);
   
   t1odd.join();
   t2even.join();
    cout << "exit"<<endl;
    return 0;
}
